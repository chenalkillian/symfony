

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message</title>
    <nav>
        <a href="/Home">Home</a>
        <a href="/games/form">Add New Game</a>
        <a href="/games/all">Show All Games</a>
        <a href="/logout">Logout</a>
    </nav>

    <a href="javascript:history.go(-1)" class="back-button">Retour</a>

</head>
<body>

{{ form_start(form) }}

{{ form_row(form.name) }}
{{ form_row(form.dev) }}
{{ form_row(form.editor) }}
{{ form_row(form.releasedate) }}
{{ form_row(form.price) }}
{{ form_row(form.gender) }}
{{ form_row(form.platform_game) }}
{{ form_row(form.rating) }}
{{ form_row(form.last_modification_user) }}

{{ form_row(form.submit) }}

{{ form_end(form) }}

</body>
<style>
    body {
        background-color: #1a1a1a;
        color: #fff;
        font-family: 'Press Start 2P', cursive;
        margin: 0;
        padding: 0;
    }
    .back-button {
        position: fixed;
        bottom: 50px;
        display: inline-block;
        padding: 15px 25px;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        background-color: #4CAF50;
        color: #fff;
        border-radius: 8px;
        transition: background-color 0.3s;
    }

    .back-button:hover {
        background-color: #45a049;
    }
    h1 {
        text-align: center;
        color: #4CAF50;
    }

    form {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        border: 2px solid #4CAF50;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(76, 175, 80, 0.5);
        background-color: #333;
    }
    nav {
        background-color: #333;
        padding: 10px;
        text-align: center;
    }

    nav a {
        color: #fff;
        text-decoration: none;
        padding: 10px 20px;
        margin: 0 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    nav a:hover {
        background-color: #555;
    }
    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #4CAF50;
    }

    input, select, button {
        width: 100%;
        padding: 10px;
        margin-bottom: 16px;
        box-sizing: border-box;
        background-color: #4CAF50;
        color: #1a1a1a;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-family: 'Press Start 2P', cursive;
        font-size: 16px;
    }

    button {
        background-color: #4CAF50;
        color: #1a1a1a;
    }

    button:hover {
        background-color: #45a049;
    }

</style>
</html>
